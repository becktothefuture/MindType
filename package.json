{
  "name": "mindtyper",
  "version": "0.2.0-alpha",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "format:write": "prettier -w .",
    "test": "vitest run --reporter=dot --coverage",
    "ci": "pnpm typecheck && pnpm lint && pnpm run -s format:check && pnpm test",
    "posttest": "node scripts/coverage-guard.cjs",
    "dev": "vitest watch",
    "prepare": "husky",
    "setup:local": "node scripts/setup-local-assets.cjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css,scss,json,mdx}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@huggingface/transformers": "^3.7.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
